<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:background="@color/cardview_shadow_start_color"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="11dp"
            android:paddingRight="11dp">

            <ImageView
                android:id="@+id/food_img"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food_default" />

            <TextView
                android:id="@+id/single_food_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_img"
                android:layout_marginTop="12dp"
                android:text="Tanduri Chicken Goes On 5% Discount, Quentity:- 5  "
                android:textColor="@color/name_text_color"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/single_food_res_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_food_title"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="25dp"

                android:text="200 TK "
                android:textColor="@color/red"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/single_food_view"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_below="@+id/single_food_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/single_food_res_price"
                android:src="@drawable/view_food_resturant_customer"
                android:text="hello">

            </ImageView>

            <ImageView
                android:id="@+id/single_food_edit"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_below="@+id/single_food_title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/single_food_view"
                android:src="@drawable/edit_best"
                android:text="hello">

            </ImageView>

            <ImageView
                android:id="@+id/view_customers"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_below="@+id/single_food_title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/single_food_edit"
                android:src="@drawable/view_customers"
                android:text="hello">

            </ImageView>

            <ImageView
                android:id="@+id/single_food_delete"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_below="@+id/single_food_title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/view_customers"
                android:src="@drawable/delete_icon"
                android:text="hello">

            </ImageView>
            <TextView
                android:id="@+id/cus_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_food_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textSize="22sp"
                android:textColor="@color/red"
                >

            </TextView>






        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>