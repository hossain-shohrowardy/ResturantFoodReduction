<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CustomerEditProfileFregment">

    <!-- TODO: Update blank fragment layout -->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <TextView
              android:id="@+id/edit_customer_signup"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_centerHorizontal="true"
              android:text="Edit Customer Profile"
              android:textSize="25dp"
              android:textColor="@color/quantum_lime700">
          </TextView>

          <ImageView
              android:id="@+id/edit_customer_image"
              android:layout_width="160dp"
              android:layout_height="120dp"
              android:layout_margin="10dp"
              android:layout_below="@+id/edit_customer_signup"
              android:layout_centerHorizontal="true"
              android:src="@drawable/resturant_image">

          </ImageView>
          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/edit_customer_name_input_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/edit_customer_image"
              layout_marginTop="15dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              app:errorEnabled="true"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edit_customer_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:hint="Customer Name">
              </com.google.android.material.textfield.TextInputEditText>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/edit_customer_email_input_layout"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              layout_marginTop="15dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/edit_customer_name_input_layout"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              app:errorEnabled="true">

              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edit_customer_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Email"
                  android:inputType="textEmailAddress"></com.google.android.material.textfield.TextInputEditText>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/edit_customer_password_input_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/edit_customer_email_input_layout"
              layout_marginTop="15dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              app:passwordToggleEnabled="true"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edit_customer_password"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Password">

              </com.google.android.material.textfield.TextInputEditText>

          </com.google.android.material.textfield.TextInputLayout>


          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/edit_customer_phone_number_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/edit_customer_password_input_layout"
              android:layout_marginTop="15dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"

              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/edit_customer_phone_number"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="8801xxxxxxxxx">

              </com.google.android.material.textfield.TextInputEditText>

          </com.google.android.material.textfield.TextInputLayout>
          <Button
              android:id="@+id/edit_customerEdit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/edit_customer_phone_number_layout"
              android:layout_marginTop="15dp"
              android:layout_marginRight="10dp"
              android:layout_centerHorizontal="true"
              android:background="@drawable/log_button"
              android:text="Edit"
              app:backgroundTint="@color/quantum_lime700">


          </Button>
      </RelativeLayout>
  </ScrollView>
</FrameLayout>